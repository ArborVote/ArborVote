{
  "name": "ArborVote",
  "version": "0.0.1",
  "description": "Rational decision-making by quadratic voting on argument trees.",
  "repository": "https://github.com/Michael-A-Heuer/ArborVote",
  "scripts": {
    "buidlerevm": "buidler node > /dev/null &",
    "stop": "sudo kill `sudo lsof -t -i:8545`",
    "compile": "buidler compile --force",
    "start": "buidler start",
    "test": "buidler test --network buidlerevm",
    "coverage": "buidler coverage --network buidlerevm"
  },
  "devDependencies": {
    "@nomiclabs/buidler": "^1.2.0",
    "@nomiclabs/buidler-solhint": "^1.2.0",
    "@nomiclabs/buidler-truffle5": "^1.2.0",
    "@nomiclabs/buidler-web3": "^1.2.0",
    "bignumber.js": "^9.0.0",
    "buidler-gas-reporter": "^0.1.3",
    "solidity-coverage": "^0.7.0-beta.3",
    "web3": "^1.2.6"
  }
}
